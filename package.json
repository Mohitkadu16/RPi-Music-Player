{
  "name": "rpi-music-player",
  "version": "1.0.0",
  "description": "A music player application for Raspberry Pi with TypeScript backend and React frontend",
  "scripts": {
    "install:all": "npm install && cd src/backend && npm install && cd ../frontend && npm install",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd src/backend && npm run build",
    "build:frontend": "cd src/frontend && npm run build",
    "start": "cd src/backend && npm run start:prod",
    "start:dev": "concurrently \"npm run start:backend:dev\" \"npm run start:frontend:dev\"",
    "start:backend:dev": "cd src/backend && npm run start:dev",
    "start:frontend:dev": "cd src/frontend && npm run start",
    "package": "bash scripts/build-pi.sh"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/html-minifier-terser": "^7.0.2",
    "@types/prettier": "^2.7.3",
    "@types/q": "^1.5.8",
    "concurrently": "^8.2.0",
    "typescript": "~4.9.5"
  },
  "dependencies": {
    "axios": "^1.12.2"
  }
}
